---
layout: base.njk
---

<h1>{{ title }}<span class="meta"><br />({{ director }}, {{ year }})</span></h1>

<div class="flow" style="--flow-gap: 2lh;">
<section>
{% set medium = {
    title: title,
    subtitle: subtitle,
    author: author,
    director: director,
    actors: actors,
    coverUrl: coverUrl,
    poster: poster,
    description: description,
    published: published,
    year: year,
    isbn: isbn,
    bookshopUrl: bookshopUrl,
    reviewUrl: reviewUrl,
    owned: owned,
    shelf: shelf,
    start_date: start_date,
    end_date: end_date,
    rating: rating,
    watched: watched,
    self: true
} %}
{% set slug = slug | slugify %}
{% set path = "/movies/" ~ slug %}
{% include "card.njk" %}
</section>
<section>
<h2>YAML for Review</h2>
<pre>
