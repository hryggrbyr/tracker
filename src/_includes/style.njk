    margin-inline-start: auto;
}
body > header a[rel="home"] {
    font-size: 4em;
    font-weight: bold;
    font-style: italic;
    display: grid;
    place-items: center center;
    margin-inline: auto;
    text-decoration: none;
    color: canvasText;
    position: relative;
    z-index: 1;
    overflow: hidden;
    aspect-ratio: 1/1;
}
body > header a[rel="home"] i {
    grid-area: 1 / 1;
}

body > header a[rel="home"]:before {
    content: "";
  width: 100%;
  aspect-ratio: 1/1;
  border-radius: 100%;
  grid-area: 1 / 1;
  display: block;
    background:
      conic-gradient(
        from 0deg,
        transparent 0deg,
        light-dark(rgb(from #004444 r g b/0.25), rgb(from darkgoldenrod r g b/0.25)) 60deg,
        light-dark(rgb(from #00aaaa r g b/0.85), rgb(from goldenrod r g b/0.85)) 90deg,
        transparent 120deg
      );
    animation: radarSweep 3s linear infinite;
    z-index: 0;
  }

  @keyframes radarSweep {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

.site-footer {
    border-top: 1px solid rgb(from canvasText r g b/0.5);
