<style>

:root {
    color-scheme: light dark;
    font-family: 'Atkinson Hyperlegible Next Variable', system-ui, sans-serif;
    font-weight: 300;
    line-height: 1.6;
}
:is(h1, h2, h3, h4, h5, h6, strong) {
    font-weight: 500;
}
* {
    box-sizing: border-box;
}
body {
    overflow-x: hidden;

    background:
        radial-gradient(
          circle at calc(75% - 150px) calc(100% - 150px),
          rgb(from canvasText r g b/0.01625) 40%,
          transparent 40%
        ),
        radial-gradient(
          circle at calc(100% - 100px) calc(100% - 100px),
          rgb(from canvasText r g b/0.01625) 20%,
          transparent 20%
        ),
        radial-gradient(
          circle at calc(100% - 200px) calc(50% - 100px),
          rgb(from canvasText r g b/0.01625) 20%,
          transparent 20%
        );
      background-attachment: fixed;


}
body > header .wrapper {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	gap: 1rem;
}
body > header nav {
    margin-inline-start: auto;
}
body > header a[rel="home"] {
    font-size: 4em;
    font-weight: bold;
    display: grid;
    place-items: center center;
    margin-inline: auto;
    text-decoration: none;
    color: canvasText;
    position: relative;
    z-index: 1;
    overflow: hidden;
    aspect-ratio: 1/1;
}
body > header a[rel="home"] i {
    grid-area: 1 / 1;
}

body > header a[rel="home"]:before {
    content: "";
  width: 100%;
  aspect-ratio: 1/1;
  border-radius: 100%;
  grid-area: 1 / 1;
  display: block;
    background:
      conic-gradient(
        from 0deg,
        transparent 0deg,
        light-dark(rgb(from #004444 r g b/0.25), rgb(from darkgoldenrod r g b/0.25)) 60deg,
        light-dark(rgb(from #00aaaa r g b/0.85), rgb(from goldenrod r g b/0.85)) 90deg,
        transparent 120deg
      );
    animation: radarSweep 3s linear infinite;
    z-index: 0;
  }

  @keyframes radarSweep {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

.site-footer {
    border-top: 1px solid rgb(from canvasText r g b/0.5);
}

.site-footer .footer-grid {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 1rem;
}

.site-footer .footer-grid .column {
    flex-basis: 30%;
    flex-grow: 1;
    flex-shrink: 1;
    min-width: max-content;
}

.wrapper {
     container-type: inline-size;
    width: 100%;
    margin-inline: auto;
}
@media screen and (min-width: 1280px) {
    .wrapper {
        max-width: 1280px;
    }
}
.gutters {
    padding-inline: 1rem;
}
.spacing {
    padding-block: 1lh;
}
.flow >*+* {
    margin-block-start: var(--flow-gap, 1lh);
}
a {
    color: light-dark(teal, goldenrod);
}
p {
    max-width: 67ch;
}

h1 {
    line-height: 1.1;
    margin-block: 2lh;
    text-align: center;
}
h1 .meta {
    font-size: 1rem;
}
:is(h2,h3) {
    line-height: 1.1;
}

pre {
    width: 100%;
    overflow: auto;
    background: rgb(from canvasText r g b/0.01);
    border: 1px solid rgb(from canvasText r g b/0.6);
    padding: 2ch;
}
nav {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}
nav > div {
    flex-grow: 1;
}
.conjoined {
    display: flex;
    flex-direction: row;
    gap: 0;
    justify-content: stretch;
}
.conjoined a {
    flex-grow: 1;
    text-transform: none;
    text-align: center;
    text-decoration: none;
    line-height: 1.1;
    padding-inline: 2ch;
    padding-block: 0.25lh;
    background-color: light-dark(teal, goldenrod);
    color: light-dark(canvas, canvas);
    font-weight: bold;
}
.conjoined.ghost a {
    background: none;
    font-size: 1.5em;
    border: 1px solid light-dark(teal, goldenrod);
}
.conjoined a+a {
    border-left: 1px solid currentColor;
}
.conjoined a:first-of-type {
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
}
.conjoined a:last-of-type {
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
}

table {
    width: 100%;
    display: block;
    overflow-x: auto;
    white-space: nowrap;
    font-variant-numeric: slashed-zero tabular-nums;
}

table tbody {
    display: inline-table;
    width: 100%;
}

table tr :is(th, td) {
    padding-inline: 2ch;
    padding-block: 0.25lh;
}

table tr:nth-child(odd):not(:has(th)) {
    background: rgb(from canvasText r g b/.05);
}

table tr:has(th) {
    background: rgb(from canvasText r g b/.5);
    color: canvas;
    text-align: left;
    font-size: 1.1em;
}

.border {
    border: 1px solid var(--border-color, canvasText);
    border-top-right-radius: 1lh;
    border-bottom-left-radius: 1lh;
    border-bottom-right-radius: 8px;
    border-top-left-radius: 8px;
}

a.border {
  text-decoration: none;
  text-align: center;
    padding-block: 0.5lh;
    padding-inline: 0.5em;
}
a.border:hover {
    text-shadow: 0 0 8px canvasText;
}

details summary:hover {
    cursor: pointer;
}
:is(.card, .book-meta) details summary {
    margin-block-end: 1lh;
    font-style: italic;
}
:is(.card, .book-meta) details[open] summary {
    opacity: 0.5;
}

.txb-card {
    --border-color: light-dark(teal, goldenrod);
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 1lh;
    padding: 1lh;
}
.txb-card .column {
    flex-basis: 30%;
    flex-grow: 1;
    flex-shrink: 1;
    min-width: 240px;
}
.column:has(figure) {
    min-width: min-content;
}
.column:has(figure) img {
    display: block;
    margin-inline: auto;
    width: 100%;
    max-width: 30rem;
    object-fit: contain;
}
.column:has(figure) figcaption {
    font-size: 0.8em;
    text-align: center;
    line-height: 1.1;
}
.column:has(.book-meta) {
    display: flex;
    flex-direction: column;
}
.column:has(.book-meta) h3 {
    font-size: 1.8em;
}
.column:has(.book-meta) h3 em {
    font-size: 0.6em;
}
.column:has(.book-meta) .link-wrapper {
    padding-block-start: 2lh;
    margin-block-start: auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 1rem;
}
.column:has(.book-meta) .link-wrapper a {
    --border-color: currentColor;
    flex-grow: 1;
    text-decoration: none;
    padding-block: 0.5lh;
    padding-inline: 0.5em;
    text-align: center;
}
.column .reading-meta  {
    display: flex;
    flex-direction: column;
    height: 100%;
}
.column .reading-meta :first-child {
    margin-block-start: auto;
}

.grid {
  display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(300px, 100%), 1fr));
    gap: 1rem; /* or 2rem, whatever spacing you want */
}

.shelf-cover {
  display: flex;
  flex-direction: column;
  width: 100%;
  max-width: 300px;
  aspect-ratio: 3/4;
  padding: 2rem;
  overflow: clip;
  background-size: cover;
  background-attachment: scroll;
  background-position: center center;
}
.shelf-cover h4 {
  margin-block-start: auto;
  font-size: 2rem;
  line-height: 1.1;
  text-align: center;
}
.shelf-cover h4 .meta {
  font-size: 1rem;
}
.shelf-cover a {
  position: relative;
}
.shelf-cover a:before {
    content: '';
    position: absolute;
    inset: 0;
  }
</style>
