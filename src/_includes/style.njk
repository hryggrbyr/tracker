.border {
    border: 1px solid var(--border-color, canvasText);
    border-top-right-radius: 1lh;
    border-bottom-left-radius: 1lh;
    border-bottom-right-radius: 8px;
    border-top-left-radius: 8px;
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* Adjust based on number of tabs */
  grid-template-rows: auto 1fr;
}

.item {
	display: contents;
	--border-color: light-dark(teal, goldenrod);
}

/* Make summaries look like tabs */
.item .subitem {
  grid-row: 1;
  cursor: pointer;
  padding: 0.5rem 1rem;
  list-style: none; /* Hide marker */
  grid-column: var(--n);
  border: 1px solid transparent;
  transition: border-color ease-in 250ms;
  margin-block-end: 1lh;
  text-align: center;
  position: relative;
}

.item .subitem:hover {
    text-shadow: 0 0 8px canvasText;
    /*background-color: light-dark(rgba(0,0,0,0.1), rgba(255,255,255,0.1));*/
}

.item + .item .subitem {
    margin-inline-end: 1rem;
}

/* Hide the default marker in all browsers */
.item .subitem::-webkit-details-marker {
  display: none;
}

/* Active tab styling */
.item[open] .subitem {

  color: light-dark(teal, goldenrod);
  border-color: currentColor;
  position: relative;
  z-index: 1;
}

/* All content areas occupy the same grid cell */
.details-content {
	max-width: 100%;
	overflow-x: auto;
  grid-row: 2;
  grid-column: 1 / -1; /* Span all columns */
  padding-block: 1lh;
  padding-inline: 2ch;
  min-height: 0;
  contain: layout;
}

/* Hide content when details is not open */
.item:not([open]) .details-content {
  display: none;
}

/* Show content only for open details */
.item[open] .details-content {
  display: block;
}
.details-content .card {
    border: none;
}

.card details summary {
    margin-block-end: 1lh;
    font-style: italics;
}
.card details[open] summary {
    opacity: 0.5;
}

