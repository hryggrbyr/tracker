    line-height: 160%;
}
* {
    box-sizing: border-box;
}
body {
    overflow-x: hidden;

    background:
        radial-gradient(
          circle at calc(75% - 150px) calc(100% - 150px),
          rgb(from canvasText r g b/0.01625) 40%,
          transparent 40%
        ),
        radial-gradient(
          circle at calc(100% - 100px) calc(100% - 100px),
          rgb(from canvasText r g b/0.01625) 20%,
          transparent 20%
        ),
        radial-gradient(
          circle at calc(100% - 200px) calc(50% - 100px),
          rgb(from canvasText r g b/0.01625) 20%,
          transparent 20%
        );
      background-attachment: fixed;


}
body > header .wrapper {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	gap: 1rem;
}
