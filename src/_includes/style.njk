    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
}

table {
    width: 100%;
    display: block;
    overflow-x: auto;
    white-space: nowrap;
    font-variant-numeric: slashed-zero tabular-nums;
}

table tbody {
    display: inline-table;
    width: 100%;
}

table tr :is(th, td) {
    padding-inline: 2ch;
    padding-block: 0.25lh;
}

table tr:nth-child(odd):not(:has(th)) {
    background: rgb(from canvasText r g b/.05);
}

table tr:has(th) {
    background: rgb(from canvasText r g b/.5);
    color: canvas;
    text-align: left;
    font-size: 1.1em;
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* Adjust based on number of tabs */
  grid-template-rows: auto 1fr;
}

.item {
	display: contents;
}

/* Make summaries look like tabs */
.item summary {
  grid-row: 1;
  cursor: pointer;
  padding: 0.5rem 1rem;
  list-style: none; /* Hide marker */
  border: 1px solid transparent;
  border-bottom-color: light-dark(teal, goldenrod);
  grid-column: var(--n);
}

/* Hide the default marker in all browsers */
.item summary::-webkit-details-marker {
  display: none;
}

/* Position each tab based on --n variable */
.item summary {
}

/* Active tab styling */
.item[open] summary {
  border-color: light-dark(teal, goldenrod);
  border-bottom-color: transparent;
  position: relative;
  z-index: 1;
}

/* All content areas occupy the same grid cell */
.details-content {
	max-width: 100%;
	overflow-x: auto;
  grid-row: 2;
  grid-column: 1 / -1; /* Span all columns */
  padding-block: 1lh;
  padding-inline: 2ch;
  border-left: 1px solid light-dark(teal, goldenrod);
  border-right: 1px solid light-dark(teal, goldenrod);
  border-bottom: 1px solid light-dark(teal, goldenrod);
    min-height: 0;
  contain: layout;
}

/* Hide content when details is not open */
.item:not([open]) .details-content {
  display: none;
}

/* Show content only for open details */
.item[open] .details-content {
  display: block;
}
</style>
